from django.contrib import admin
from django.urls import include, path
from django.conf import settings
from django.conf.urls.static import static

urlpatterns = [
    path('', include('anfisa_for_friends.homepage.urls', namespace='homepage')),
    path('about/', include('anfisa_for_friends.about.urls', namespace='about')),
    path('ice_cream/', include('anfisa_for_friends.ice_cream.urls', namespace='ice_cream')),
    path('admin/', admin.site.urls),
]

# Только для медиа-файлов в режиме отладки
if settings.DEBUG:
    urlpatterns += static(settings.MEDIA_URL, document_root=settings.MEDIA_ROOT)

